extends layout

block content
  h1= title
  p Welcome to the sweetMagic pug
  div(class="container-fluid")
        div(class="row")
            -
                let sweetMagic = [
                    {
                        "Itemname": "Laddu",
                        "Quantity": 50,
                        "price": "nine USD"
                    },
                    {
                        "Itemname": "Sheer",
                        "Quantity": 20,
                        "price": "Five USD"
                    },
                    {
                        "Itemname": "Kaaju",
                        "Quantity": 20,
                        "price": "Ten USD"
                    },                   
                ]
            each v,index in sweetMagic
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.Itemname}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.Quantity}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.price}
  script.                
        function buy(intemNo)
        {
              alert(`you purchased Item ${intemNo+1}`)
        }